header
	z-index 2
	top 0
	left 0
	position fixed
	width 200px
	height 100%
	min-height 100%
	background #000
	color #FFF

	h1,h2,h3,h4,.presentation,li
		padding 0 10px

	h1
		font-size 24px
		text-align center
		padding 20px 0 10px 0

	h2
		font-size 18px
		text-align center
		padding-bottom 20px
		color #DDD

	h3
		font-size 18px
		padding-top 15px
		padding-bottom 18px
		color #CCC

	h4
		font-size 11px
		padding-bottom 5px

	.presentation
		font-size 11px
		text-align justify
		line-height 15px
		padding-bottom 20px
		color #CCC

	a
		color #AAA

	ul
		width 100%
		li
			display block
			overflow auto
			a
				display block
				padding 5px 10px

				// padding 10px 0
