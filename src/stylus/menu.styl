header
	z-index 2
	top 0
	left 0
	position fixed
	width 300px
	height 100%
	min-height 100%
	background #000
	color #FFF
	padding 40px
	margin-bottom 40px
	overflow-y auto
	overflow-x hidden
	box-sizing border-box

	// h1,h2,h3,h4,.presentation,li
	// 	padding 0 10px

	a.title
		text-decoration none

		h1
			color #FFF
			text-align left
			padding 20px 0 10px 0
			fBold( 48px )
			span
				opacity .5
				font-weight 300

		h2
			padding 20px 0 40px 0
			color #DDD
			fLight( 16px )
			letter-spacing 1px
			opacity .5

	h3
		margin-top 60px
		margin-bottom 20px
		color #DDD
		fRegular( 18px )
		letter-spacing 1.5px

	h4
		font-size 11px
		padding-bottom 5px


	.presentation
		fLight( 12px )
		letter-spacing 1px
		line-height 16px
		padding-bottom 20px
		color #CCC
		span
			display inline-block
			padding-top 5px

	.links
		overflow hidden
		h4
			float right
			display block
		.first
			float left
		.second
			margin-right 10px

		a
			color #AAA
			display inline-block
			fRegular( 10px )
			line-height 15px
			opacity .5
			text-decoration none
			border-bottom 1px solid #aaa
			padding-bottom 2px
			margin-bottom 4px
			&:hover
				opacity 1

	ul
		width 100%
		line-height 18px
		li
			display block
			overflow auto
			a
				transition opacity 0.3s
				position relative
				display inline-block
				fRegular( 14px )
				color #AAA
				text-decoration none
				border-bottom 1px solid #aaa
				padding-bottom 3px
				margin-bottom 10px
				opacity .5
				&:hover
					opacity 1

		li.selected a
			opacity 1

	.backhome
		display none
		color #666
		text-align center
		fLight(14px)
		padding 10px 0
		height 100%
		text-decoration none
		position relative
		&:hover
			color #000
			&:before
				transform scaleY(1)
		&:before
			content ""
			position absolute
			width 100%
			height 100%
			top 0
			left 0
			z-index -1
			transform scaleY(0)
			background #FFF
			transform-origin bottom center
			transition all .2s ease-out

@media (max-width: 700px)
	header
		width 100%
		&.article
			border-bottom 1px solid #111
			padding 0
			height 34px
			min-height 34px
			*
				display none
			.backhome
				display block

	iframe
		width 100%
		height calc(100% - 34px)
		left 0
		top 34px
@media (max-width: 400px)
	header
		padding 20px
		a.title
			br
				display none
			h1
				padding-top 10px
				font-size 28px
