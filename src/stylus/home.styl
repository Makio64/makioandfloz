#home
  position absolute
  min-height 100%
  height 100%
  width calc(100% - 300px)
  top 0
  left 300px

.article-entry
  position relative
  display block
  width 100%
  height 50%
  overflow hidden
  img
    position relative
    display block
    transform-origin 50% 50%
    backface-visibility hidden

.article-entry-texts
  position absolute
  bottom 75px
  // left 75px
  display block
  height 110px
  // overflow hidden
  span
    display block

.article-entry-texts-bg
  position absolute
  display inline-block
  width 100%
  height 100%
  background-color #fff
  transform-origin 0 0
  transform translateX( -100% )
  backface-visibility hidden

.article-entry-texts-line
  position absolute
  top 60%
  display inline-block
  width 90%
  height 3px
  background-color #000
  transform-origin 100% 0
  transform translateX( -100% )
  backface-visibility hidden

.article-entry-texts-title
  position relative
  display inline-block
  fLight( 64px )
  line-height 106px
  letter-spacing 8px
  color #000
  padding 0 110px 0 40px
  transform translateX( -100% )
  backface-visibility hidden
